
pipeline {
   tools {
        maven 'Maven3'
    }
    agent any
    environment {
        registry = "211125720658.dkr.ecr.us-east-1.amazonaws.com/sinorepo"
    }
   
    stages {
        stage('Cloning Git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: '', url: 'https://github.com/Sinolinaa/EKS-CICD.git']]])     
            }
        }
      stage ('Build') {
          steps {
            sh 'mvn clean install'           
            }
      }
    // Building Docker images
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry 
        }
      }
    }
   
    // Uploading Docker images into AWS ECR
    stage('Pushing to ECR') {
     steps{  
         script {
                sh 'aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin ${registry}'
                sh 'docker push 211125720658.dkr.ecr.us-east-1.amazonaws.com/sinorepo'
         }
        }
      }

       stage('K8S Deploy') {
            steps{   
            script {
               withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'AWS']]) {
               withKubeConfig(credentialsId: 'newk8s', serverUrl: 'https://6FA1701E503C62578AF7FEAFA50617E7.gr7.us-east-1.eks.amazonaws.com') {
                  sh 'kubectl apply -f  eks-deploy-k8s.yaml'
                  }
               }

       }
    }
}
}


